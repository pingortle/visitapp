@import 'axis'
@import 'jeet'

#login-buttons
  margin: auto

#login-dropdown-list
  area()
  size: 22rem auto
  font-size: 0
  text-align: center

  #login-buttons .login-button, .accounts-dialog .login-button
    font-size: 1rem
    cursor: pointer
    padding: 4px 8px

  label
    font-size: 1rem
    display: inline-block
    width: 5rem
    height: 2rem
    border: solid 1px #bbb
    border-right: 0
    padding: 0 .5rem 0 .5rem
    margin: 0
    text-align: center
    border-radius: .2rem 0 0 .2rem
    background-color: #f5f5f5
    vertical-align: top
    box-shadow: inset 0 1px 1px rgba(0,0,0,0.1)
    line-height: normal

  input
    font-size: 1rem
    display: inline-block
    size auto auto
    margin-bottom: .25rem
    margin-left: 0
    height: 2rem
    padding: 0 .5rem 0 .5rem
    border-top-left-radius: 0
    border-bottom-left-radius: 0


  a
    font-size: 1rem
    cursor: pointer
    display: inline-block
    margin-bottom: .5rem

    &.login-close-text
      margin-bottom: .5rem

  .login-button
    font-size: 1rem
    button()
    margin: 1rem .5rem

  .message
    notice: 6rem
    margin-top: .5rem
    &.error-message
      font-size: 1rem
      notice: 6rem red
      color: white
      margin: auto
